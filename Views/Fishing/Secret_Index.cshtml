@model IEnumerable<capanna.alessandro._5H.prenota.Models.Fishing>

<h1>Aggiungi, modifica, elimina</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-primary">Aggiungi articolo</button></a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descrizione)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prezzo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descrizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezzo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Nome">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Nome">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Nome">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>