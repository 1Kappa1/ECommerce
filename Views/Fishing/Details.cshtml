@model capanna.alessandro._5H.prenota.Models.Fishing

@{
    ViewData["Title"] = "Dettagli";
}

<h1>Dettagli</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descrizione)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descrizione)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prezzo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prezzo)
        </dd>
    </dl>
</div>
<div>
    @if(User.Identity!.Name! == "Kappa" || User.Identity!.Name == "MConti"){
    <a asp-action="Edit" asp-route-id="@Model?.Nome"><button class="btn btn-primary" type="button">Modifica</button></a> 
    <a asp-action="Index"><button type="button" class="btn btn-primary">Torna alla lista</button></a>
    }
    else
    {
    <a asp-action="Index"><button type="button" class="btn btn-primary">Torna alla lista</button></a>
    }
</div>
