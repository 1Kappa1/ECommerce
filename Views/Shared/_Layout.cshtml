<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fishing Market</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/capanna.alessandro._5H.prenota.styles.css" asp-append-version="true"/>

</head>
<style>
    .btn-hover {
        transition: all 0.5s ease;
    }

        .btn-hover:hover {
        color: #000;
        transform: scale(1.2);
    }
</style>
<body>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white sticky-top">
            <div class="container-fluid">
                
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img style="width: 100px; height: 100px" src="Monster fishing.png" alt="Monster fishing">
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn-lg btn-hover" style="font-size: x-large;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn-lg btn-hover" style="font-size: x-large;" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn-lg btn-hover" style="font-size: x-large;" asp-area="" asp-controller="Fishing" asp-action="Index">Market Place</a>
                        </li>
                        <li>
                            @if (User.Identity!.Name! == "Kappa" || User.Identity!.Name == "MConti")
                            {
                                <a class="nav-link text-dark btn-lg btn-hover" style="font-size: x-large;" asp-area="" asp-controller="Fishing" asp-action="Secret_Index">Market Modify</a>
                            }
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <p>Non esitare a contattarci per eventuali dubbi</p>
        <div class="container">
            &copy; Fishing Market - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
